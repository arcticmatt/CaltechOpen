<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <TextView
            android:id="@+id/title_view"
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C-Store"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"/>

        <TextView
                android:id="@+id/time_view"
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timeview"
                android:gravity="left"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title_view"/>
        <TextView
                android:id="@+id/open_view"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/title_view"
                android:paddingRight="10dp"/>
        <TextView
                android:id="@+id/info_view"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="until closing time"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/time_view"
                android:layout_alignBaseline="@id/time_view"
                />
    </RelativeLayout>

</LinearLayout>