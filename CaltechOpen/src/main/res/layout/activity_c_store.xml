<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity"
              android:orientation="vertical">

    <TextView
            android:id="@+id/title"
            android:textSize="@dimen/store_title_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C-Store"
            android:gravity="center"
            android:layout_gravity="center"/>
    <TextView
            android:id="@+id/weekdays"
            android:textSize="@dimen/store_days_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday - Friday"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="10dp"/>
    <TextView
            android:id="@+id/times"
            android:textSize="@dimen/store_times_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30am - 1:00am"
            android:gravity="center"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/breaks"
            android:textSize="@dimen/store_breaks_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(closed for breaks from 9:30pm - 10:00pm and 11:15pm - 11:30pm)"
            android:gravity="center"
            android:layout_gravity="center"/>
    <TextView
            android:id="@+id/Saturday"
            android:textSize="@dimen/store_days_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="10dp"/>
    <TextView
            android:id="@+id/times2"
            android:textSize="@dimen/store_times_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00am - 10:00pm"
            android:gravity="center"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/breaks2"
            android:textSize="@dimen/store_breaks_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(closed for breaks from 2:00pm - 2:15 pm, 3:45pm - 4:15pm, and 8:00pm - 8:15pm)"
            android:gravity="center"
            android:layout_gravity="center"/>
    <TextView
            android:id="@+id/Sunday"
            android:textSize="@dimen/store_days_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="10dp"/>
    <TextView
            android:id="@+id/times3"
            android:textSize="@dimen/store_times_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00am - 1:00am"
            android:gravity="center"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/breaks3"
            android:textSize="@dimen/store_breaks_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(closed for breaks from 12:00pm - 12:15pm, 2:00pm - 2:30pm, 5:00pm - 5:15pm, 7:30pm - 8:00pm, and 11:00pm - 11:15pm)"
            android:gravity="center"
            android:layout_gravity="center"/>

</LinearLayout>
